{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "env": {
                "FLASK_APP": "${workspaceFolder}/app.py",
                "FLASK_ENV": "development"
            },
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}"
        }
    ]
}
